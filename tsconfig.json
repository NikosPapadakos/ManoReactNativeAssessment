{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/ui/components/*"],
      "@screens": ["src/ui/screens"],
      "@screens/*": ["src/ui/screens/*"],
      "@theme": ["src/ui/theme"],
      "@theme/*": ["src/ui/theme/*"],
      "@assets": ["assets/"],
      "@assets/*": ["assets/*"],
      "@services": ["src/store/services"],
      "@services/*": ["src/store/services/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"]
    }
  },
  "extends": "@tsconfig/react-native/tsconfig.json",
  "exclude": ["__tests__/**/*-test.ts", "Task2"]
}
